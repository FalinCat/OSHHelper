<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/question_text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="С кем необходимо согласовать внесение изменений в конструкцию действующего основного оборудования, промышленных зданий?"
            android:textSize="24sp" android:textColor="@android:color/black" android:background="@drawable/border"
            android:layout_margin="8dp" android:padding="16dp"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/question_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/get_answer_button"
            android:id="@+id/scrollview" app:layout_constraintVertical_bias="1.0">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/answers_layout"
        android:layout_gravity="bottom">
            <TextView
                    android:id="@+id/answer_1_text"
                    tools:text="C головной "
                    android:background="@drawable/border"
                    style="@style/style_answer" android:paddingBottom="36dp" android:paddingEnd="36dp"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/answer_2_text" android:textSize="18sp"
                    android:background="@drawable/border"
                    style="@style/style_answer" tools:text="asfasdgf"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/answer_3_text"
                    tools:text="asfasf"
                    android:background="@drawable/border"
                    style="@style/style_answer"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/answer_4_text"
                    tools:text="asfafasf"
                    android:background="@drawable/border"
                    style="@style/style_answer"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Ответить"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/get_answer_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/go_next_button" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/question_count_text" android:layout_marginStart="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question_count_text"
            tools:text="Count"
            app:layout_constraintStart_toStartOf="@+id/correct_answers_count"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/correct_answers_count"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/get_answer_button"/>
    <Button
            android:text=">>>"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/go_next_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correct_answers_count" tools:text="100" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorCorrectAnswer" android:padding="2dp" android:text="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wrong_answer_count" tools:text="100"
            app:layout_constraintStart_toEndOf="@+id/correct_answers_count"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/correct_answers_count" android:background="@color/colorWrongAnswer"
            android:padding="2dp" android:text="0"/>
    <!--<Button-->
    <!--android:text="@string/go_back_text"-->
    <!--android:layout_width="51dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/go_back_button" app:layout_constraintStart_toEndOf="@+id/question_count_text"-->
    <!--android:layout_marginStart="8dp"-->
    <!--android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>